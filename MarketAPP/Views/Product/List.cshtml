@model  List<MarketAPP.Model.ProductViewModel>
@{
    ViewBag.Title = "List";
}

    <div class="box">
        <div class="box-header">
            <div class="row">

                <div class="col-md-10"><h3 class="box-title">Ürün Listesi</h3></div>
                <div class="col-md-2"> <a href="/Product/Create">Ürün Ekle</a></div>

            </div>

        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Kategori Adı</th>
                        <th>Fiyatı</th>
                        <th>Detay</th>
                        <th colspan="2">İşlemler</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.ProductName</td>
                            <td>
                                @item.CategoryName
                            </td>
                            <td>@item.Cost</td>
                            <td>@item.Detail</td>


                            <td><a href="/Product/Edit/@item.Id"> <img width="40" src="~/Content/pencil_1__.png" /></a></td>
                            <td><a href="/Product/Delete/@item.Id"><img width="40" src="~/Content/Delete-2-128.png" /></a></td>

                        </tr>

                    }


                </tbody>

            </table>
        </div>
        <!-- /.box-body -->
    </div>