@model  List<MarketAPP.Model.CategoryViewModel>
@{
    ViewBag.Title = "Index";
}

<div class="box">
    <div class="box-header">
        <div class="row">

            <div class="col-md-8"><h3 class="box-title">Kategori Listesi</h3></div>
            <div class="col-md-4"> <a href="/Category/Create">Kategori Ekle</a></div>

        </div>

    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th>Kategori Adı</th>
                    <th>Kategori Türü</th>
                    <th colspan="2">İşlemler</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {

                    <tr>

                        <td>
                            @item.CategoryName
                        </td>

                        <td>
                            @if (@item.TopCategoryId == null)
                            {
                                <span class="label label-danger">Ana Kategori</span>
                            }
                            else  
                            {
                                <span class="label label-info">Alt Kategori</span>
                            }

                        </td>

                        <td><a href="/Category/Edit/@item.Id"> <img width="40" src="~/Content/pencil_1__.png" /></a></td>
                        <td><a href="/Category/Delete/@item.Id"><img width="40" src="~/Content/Delete-2-128.png" /></a></td>

                    </tr>

                }


            </tbody>

        </table>
    </div>
    <!-- /.box-body -->
</div>